root = true

[*.{json,js,jsx,ts,cts,tsx,html,css}]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Configurable Prettier behaviors
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80

[package.json]
insert_final_newline = false
max_line_length = off
